    "eslint:js": "npm run eslint -w examples/js",
    "eslint:nextjs": "npm run eslint -w examples/next-js",
    "eslint:reactjs": "npm run eslint -w examples/react-js",
    "eslint:vuejs": "npm run eslint -w examples/vue-js"
  },
  "devDependencies": {
    "eslint": "^8.33.0"
  }
}
