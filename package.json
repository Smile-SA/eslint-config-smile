{
  "private": true,
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w packages/eslint-plugin-smile",
    "eslint": "npm run eslint -w packages/eslint-plugin-smile",
